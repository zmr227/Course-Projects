@model IEnumerable<Granite_House.Models.ProductTypes>
@{
    ViewData["Title"] = "Index";
}


<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product Type</a>
    </div>
</div>

<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th>

            </th>
        </tr>

        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                <a  asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                <a class="btn-outline-success" asp-action="Details" asp-route-id="@item.Id"><i class="far fa-list-alt"></i></a> |
                <a class="btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
        }
    </table>
</div>
