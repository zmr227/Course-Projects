@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/home.css" />
<div class="home-img">
    <div class="container">
        <h1>Find a place to read.</h1>
        <p>Insights from people in over 34,000 cities and 192 countries.</p>
        <a asp-action="Index" asp-controller="Stories">Learn More</a>
    </div>
</div>
<div class="learn-more">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h3>Read & Comment</h3>
                <p> With users from all over the world.</p>
                <p><a asp-area="Identity" asp-page="/Account/Login">Start Your Journey</a></p>
            </div>

            <div class="col-md-4">
                <h3>Write & Share </h3>
                <p>Your own amazing stories and share them with users from all over the world.</p>
                <p><a asp-area="Identity" asp-page="/Account/Register">Register Now</a></p>
            </div>

            <div class="col-md-4">
                <h3>Trust & Safety</h3>
                <p>From Verified ID to our worldwide customer support team, we've got your back.</p>
                <p><a asp-action="Privacy" asp-controller="Home">Learn about trust at Storyphase</a></p>
            </div>
        </div>
    </div>
</div>
