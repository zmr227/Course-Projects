@model IEnumerable<Storyphase.Models.StoryBlocks>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stories.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StoryBlocksId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StoryBlocksId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StoryBlocksId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
