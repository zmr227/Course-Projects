@model List<Storyphase.Models.StoryBlocks>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#playButton').click(function () {
            $('#playButton,#pauseButton').toggle();
            $('#carouselControls').carousel('cycle');
        });
        $('#pauseButton').click(function () {
            $('#playButton,#pauseButton').toggle();
            $('#carouselControls').carousel('pause');
        });
    });
</script>
<br />

<!--Carousel controls -->
<button id="pauseButton"><i class="fa fa-pause"></i></button>
<button id="playButton" style="display:none;"><i class="fa fa-play"></i></button>

<div id="carouselControls" class="carousel slide" data-ride="carousel" data-interval="2000">


    <div class="carousel-inner">
        @{
            var first = true;
        }
        @foreach (var item in @Model)
        {
            <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">

                <div class="card-title">
                    <input asp-for="@item.Name" diabled class="form-control" />
                </div>
                <img class="d-block w-100" src="@item.Image" alt="@item.Name">

                <div class="tab-content">
                    <input asp-for="@item.Content" diabled class="form-control" />
                </div>
            </div>
            first = false;
        }
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#carouselControls" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#carouselControls" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
    <!--
        <a class="carousel-control-prev" href="#carouseControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouseControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    -->
</div>
