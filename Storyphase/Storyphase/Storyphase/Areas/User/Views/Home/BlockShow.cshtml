@model List<Storyphase.Models.StoryBlocks>

<br />

<!--Carousel controls -->
<div id="carouseControls" class="carousel slide" data-ride="carousel" data-interval="5000">

    <div class="carousel-inner">
        @{
            var first = true;
        }
        @foreach (var item in @Model)
        {
            <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">

                <div class="card-title">
                    <input asp-for="@item.Name" diabled class="form-control" />
                </div>
                <img class="d-block w-100" src="@item.Image" alt="@item.Name">

                <div class="tab-content">
                    <input asp-for="@item.Content" diabled class="form-control" />
                </div>
            </div>
            first = false;
        }
    </div>
    <a class="carousel-control-prev" href="#carouseControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouseControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>
@section Scripts {

}