<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="647.6">
    <Grid>
        <Button Content="Get Stories" HorizontalAlignment="Left" Margin="72,50,0,0" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.375,5.635" Height="28" Click="Button_Click">
            <Button.Style>
                <Style TargetType = "{x:Type Button}">
                    <Style.Triggers>

                        <Trigger Property = "IsMouseOver" Value = "True">
                            <Setter Property = "Foreground" Value = "Red" />
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <TextBlock Name="txt1" HorizontalAlignment="Left" Margin="72,102,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="239" Width="468"/>
        
    </Grid>
</Window>
