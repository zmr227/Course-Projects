@model Lab11.Models.Story
<!--
  CourseDetails.cshtml - show course details including lectures

  Jim Fawcett, CSE686 - Internet Programming, Spring 2019
-->

@{
  ViewData["Title"] = "StoryDetails";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>StoryDetails</h1>

<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Description)
    </dd>
  </dl>
</div>
<div>
  @foreach (var lct in Model.Comments)
  {
    <div style="padding:0px 25px; margin:0px;">
      @Html.Label(lct.Username) -
      @Html.Label(lct.Content)
    </div>
  }
</div>
<div style="height: 10px;"></div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.StoryID">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>
